extends layout
block content
  link(rel="stylesheet",href='stylesheets/TodoList.css')
  div#O_Cont
    div#I_Cont
      h1#title #{title}
      div#TLwrapper
        div#TLcontainer
          div.TLtemplate
            header.TLhead
              img.del(src="images/TLX.png")
              h1.TLname TaskName
             ection.TaskContainer  
            footer.TLfooter
              li
                span overdue: 
                span.due 10
              li.upcomingTasks 
                span upcoming:
                span.upcoming 5
              li 
                span taskCount:
                span.taskCount 20        

      //-Container for taks in tasklist
      //- div#TasksWrapper
      //-   div.taskContainer
      //-     header.TaskHead 
      form#Log_In_Form
        div
          label Username:
          div
            img.check(src="images/x.png")
            input(type = "text" value=""  autocomplete = "off" beenclicked = "false" name = "username")
        div
          label Password:
          div
            img.check(src="images/x.png")
            input(type = "password"  name="password" required)
          div#CreateLogin
            label Re-enter password:
            div
              img.check(src="images/x.png")
              input(type = "password"  name="password"  required)
        div#submit(onclick = "Submit(this)" state = "0") Submit
        p#createPara ------(: No Profile : No Worries :)------
        div#newProfile(onclick = "createUser(this)" state ="false") Create
      section.taskSec
        header.taskHead
          img.exit
          img.edit
          h1.TLname TaskName
          footer
            li
              span createdOn:
              span.createdOn 2/2/2
            li
              span Due In: 20
              span.dueIn 20
        section.taskContent
          p
        footer.taskFoot   
    div#taskListContainer
       
  script(src="javascripts/anime.min.js")
  script(src="javascripts/validator.js")
  script(src="javascripts/TodoAnimations.js")
  script(src="javascripts/Todo.js")
