extends layout
block content
  link(rel="stylesheet",href='stylesheets/Todo.css')
  div#O_Cont
    div#I_Cont
      h1 #{title}
      form#Log_In_Form
        div
          label Username:
          input(type = "text" value="Username" onfocus="this.value=''" name = "username")
        div
          label Password:
          input(type = "password"  name="password" required)
          div#CreateLogin
            label Re-enter password:
            input(type = "password"  name="password" required)
        div#submit(onclick = "Login()") Submit
        p --------------(: No Profile : No Worries :)--------------
        div#newProfile(onclick = "submit()") Create Profile
  script(src="javascripts/anime.min.js")
  script(src="javascripts/Todo.js")
  script(src="javascripts/TodoAnimations.js")
